{
  "name": "@geoffcox/sterling-svelte",
  "version": "0.0.17",
  "author": "Geoff Cox",
  "description": "A modern, accessible, and lightweight component library for Svelte.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GeoffCox/sterling-svelte/issues"
  },
  "homepage": "https://github.com/GeoffCox/sterling-svelte/blob/main/README.md",
  "keywords": [
    "svelte",
    "design system",
    "component",
    "controls",
    "sveltekit",
    "typescript",
    "javascript"
  ],
  "scripts": {
    "dev": "vite dev",
    "build:docs": "vite build",
    "build:lib": "svelte-kit sync && svelte-package",
    "prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "devDependencies": {
    "@fontsource/fira-mono": "^4.5.10",
    "@fontsource/overpass": "^4.5.10",
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^1.0.0",
    "@sveltejs/adapter-static": "^1.0.0",
    "@sveltejs/kit": "^1.0.0",
    "@sveltejs/package": "^1.0.0",
    "@types/lodash-es": "^4.17.6",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "mdsvex": "^0.10.6",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "svelte": "^3.54.0",
    "svelte-check": "^2.9.2",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vitest": "^0.25.3"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "^1.1.0",
    "keyborg": "^2.0.0",
    "lodash-es": "^4.17.21",
    "uuid": "^9.0.0"
  }
}
